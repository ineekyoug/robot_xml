<?xml version="1.0"?>
<demo>  
   <task id="noise_detect">
   <!-- arm skill, using skill name to call the arm action in skill_list -->
      <skill>
         <name>noise_detect</name>
         <type>0</type>
         <object>waypoint3</object>
         <param>1</param>
      </skill>
   </task>
   <!-- skill name "sensor_data_collection" is fixed, using object and param to indicate the task and count-->
   <task id="sensor_data_collection">
      <skill>
         <name>sensor_data_collection</name>
         <type>0</type>
         <object>noise_detect</object>
         <param>10</param>
      </skill>
   </task>
</demo>
