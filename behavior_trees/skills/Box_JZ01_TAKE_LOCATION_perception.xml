<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4"
      main_tree_to_execute="MainTree">
    <BehaviorTree ID="MainTree">
            <Sequence>
                <Parallel failure_count="1"
                          success_count="2">
                    <TorsoAction server_name="/Torso/torso_action_service"
                                server_timeout="60000"
                                torso_height="40.3"
                                torso_yaw="27.1"
                                head_pitch="-28.6"
                                head_yaw="0"
                                max_velocity="0.15"
                                work_mode="0"
                                success="{success}"
                                msg="{msg}"/>
                    <HandAction server_name="/avaia_hand"
                                server_timeout="2000"
                                action_name="prepare_both"
                                success="{hand_success}"
                                status="{hand_status}"/>
                </Parallel>
                <TargetManipPoseService service_name="/target_manipulate_pose_estimation"
                            server_timeout="50000"
                            target_name="box"
                            perception_type="1"
                            arm_index = "0"
                            camera_id="0"
                            est_pose="{est_pose}"
                            est_pose_pre="{est_pose_pre}"
                            delta_pose="{delta_pose}"
                            feedback="{manip_feedback}"/>
            </Sequence>
    </BehaviorTree>
</root>
