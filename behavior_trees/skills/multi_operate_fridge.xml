<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4"
      main_tree_to_execute="OperateFridge">
  <include path="./skills/open_fridge_door_w_voice.xml"/>
  <include path="./skills/pick_plate.xml"/>
  <include path="./skills/nav_table.xml"/>
  <include path="./skills/place_plate.xml"/>
  <BehaviorTree ID="OperateFridge">
  <Repeat num_cycles="5">
    <Sequence>
      <SubTree ID="OpenFridgeDoor" node="{node}"
                              bt_loop_duration="{bt_loop_duration}"
                              wait_for_service_timeout="{wait_for_service_timeout}" />
      <SubTree ID="PickPlate" node="{node}"
                              bt_loop_duration="{bt_loop_duration}"
                              wait_for_service_timeout="{wait_for_service_timeout}" />
      <SubTree ID="NavTable" node="{node}"
                              bt_loop_duration="{bt_loop_duration}"
                              wait_for_service_timeout="{wait_for_service_timeout}" />
      <SubTree ID="PlacePlate" node="{node}"
                              bt_loop_duration="{bt_loop_duration}"
                              wait_for_service_timeout="{wait_for_service_timeout}" />
    </Sequence>
   </Repeat>
  </BehaviorTree>
</root>