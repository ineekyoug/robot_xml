<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4"
      main_tree_to_execute="MainTree">
  <include path="./waic_step_1.xml"/>
  <include path="./waic_step_2.xml"/>
  <include path="./waic_step_3.xml"/>
  <include path="./waic_step_4.xml"/>
  <BehaviorTree ID="MainTree">
    <!-- <KeepRunningUntilFailure> -->
      <Repeat num_cycles="10">
      <Sequence>
        <SubTree ID="WAICSTEP1" node="{node}"
                                bt_loop_duration="{bt_loop_duration}"
                                wait_for_service_timeout="{wait_for_service_timeout}" />
        <!-- <SubTree ID="WAICSTEP2" node="{node}"
                                bt_loop_duration="{bt_loop_duration}"
                                wait_for_service_timeout="{wait_for_service_timeout}" /> -->
        <SubTree ID="WAICSTEP3" node="{node}"
                                bt_loop_duration="{bt_loop_duration}"
                                wait_for_service_timeout="{wait_for_service_timeout}" />
        <SubTree ID="WAICSTEP4" node="{node}"
                                bt_loop_duration="{bt_loop_duration}"
                                wait_for_service_timeout="{wait_for_service_timeout}" />
      </Sequence>
    </Repeat>
    <!-- </KeepRunningUntilFailure> -->
  </BehaviorTree>
</root>